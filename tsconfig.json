{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"declaration": true,
		"noImplicitAny": false,
		"types": ["node"],
		"plugins": [
			{
				"name": "@0no-co/graphqlsp",
				"schema": "https://api.iq.wiki/graphql",
				"tadaOutputLocation": "./src/graphql-env.d.ts"
			}
		]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
